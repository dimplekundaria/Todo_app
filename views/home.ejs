<html>
    <head>
        <title>
            <%=locals.title%>
        </title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="/cs/home.css">
        
        
    </head>
    <body>
        
            <div class="section1"><h1>TODO App</h1></div>
               <div id="main">       
                  <form action="/create-task" method="POST">
                   <div class="row"><input type="text" class="entry" name="description" style="position: relative;" placeholder="What do you need to do?"></div>
                    <p id="desc-heading">DESCRIPTION:</p>
            
                    <div class="row" style="margin-top: 1%;">
                    <div class="cols">
                    <select class="custom-select" name="category">
                        <option selected>Choose a category</option>
                        <option value="Personal">Personal</option>
                        <option value="Work">Work</option>
                        <option value="School">School</option>
                        <option value="Cleaning">Cleaning</option>
                        <option value="Others">Others</option>
                      </select>
                       <p id="cate-heading">CATEGORY</p>
                </div>
                <div class="cols" style="margin-left: 51%;">
                    <input type="date" class="entry" name="date">
                    <p id="cate-heading">DUE DATE</p>
        
                </div>
            </div>
            <div class="row" style="height: 20%; border:none">
                <button type="submit" class="add-task-btn">
                    <i class="fa fa-plus add-icon"></i><span style="margin-left:10px;">ADD TASK</span> </button>
                    
            </div>
            
        </form>

        <% for(let i of todo_list){ %>
            <% if(i._id == locals.idTask) { %>
                <form action="/edit-task/?id=<%= i._id %>" method="POST">
                    <div class="row" style="height: 20%;">
                    
                        <div class="edit-task"><input type="text" class="edit-task-input" value="<%= i.description %>" name="description"></div>
                        <div class="edit-date"><input type="date" class="edit-date-input" value="<%= i.date %>" name="date"></div>
                        <div class="update-calender-icon"><i class="fa fa-calendar"></i></div>
                        <div><button type="submit" class="confirm">Confirm</button></div>
                        <div class="cancel"><a href="/">Cancel</a></div>

                    </div>
                </form>
                <% } else { %>
                <div class="row" style="height: 20%;border: solid 1px white;">
                    <div>
                        <div class="task-added"><p><%=i.description%></p></div>
                        <div class="calender-icon"><i class="fa fa-calendar"></i></div>
                        <div class="date-shown"><p><%=i.date%></p></div>
                    </div>
                    <div class="category-display"><p><%=i.category %></p></div>
                    <a href="/edit-task/?id=<%=i._id%>">
                        <i class="fa fa-pencil-square-o edit" aria-hidden="true"></i>
                    </a>
                    <a href="/delete-task/?id=<%=i._id%>">
                        <i class="fa fa-times-circle delete" aria-hidden="true"></i>
                    </a>
                    
                </div>
                <% } %>
                <% } %>
            
            </div>
        

            
    </body>         
</html>